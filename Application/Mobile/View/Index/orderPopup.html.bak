<div class="modal-content">
    <img src="/{$info3.food_img}" class="modal-dish-icon">
    <div class="modal-dish-info flex-content vertical-flex">
        <div class="flex-main">
            <div class="modal-dish-name">{$info3.food_name}</div>
            <div class="dish-price">
                <small>&yen;</small>
                <b class="price-num" id="food_price" data-food_price="{$food_price}">{$food_price}</b>
            </div>
        </div>
        <div class="modal-dish-right text-right">
            <button class="plus-btn" onclick="decreaseNum(this)" data-food_id="{$info3.food_id}" data-food_price="{$food_price}">
                <i class="iconfont icon-minus"></i>
            </button>
            <b id = "food_num">1</b>
            <button class="plus-btn" onclick="increaseNum(this)" data-food_id="{$info3.food_id}" data-food_price="{$food_price}">
                <i class="iconfont icon-plus"></i>
            </button>
        </div>
    </div>
    <div class="modal-dish-describe">{$info3.food_desc}</div>
    <form action="javascript:void(0)" id="attr_form">
        <volist name="at_list" id="at_vo">
        <if condition="$at_vo['select_type'] eq 0">
            <ul class="attr-list clearfix" id="first">
                <li class="attr-item-name">{$at_vo.type_name}</li>
                <!--<li class="attr-select-item attr-sm attr-select">
                    <input type="radio">
                    <div class="attr-name">
                        <span>可乐</span>
                    </div>
                    <div>+0.00元</div>
                </li>
                <li class="attr-select-item attr-lg">
                    <input type="radio">
                    <div class="attr-name">
                        <span>雪碧</span>
                    </div>
                    <div>+0.00元</div>
                </li>-->
                <volist name = "at_vo['attrs']" id = "ats_vo" key="k">
                    <!--<li class="attr-select-item {$ats_vo.length_type}" onclick="changePrice()">
                        <input type="radio" name = "radio{$ats_vo.food_attribute_id}"  value="{$ats_vo.attribute_price}" data-fd_at_id="{$ats_vo.food_attribute_id}" data-key = "{$k}"/>
                        <div class="attr-name">
                            <span>{$ats_vo.attribute_name}</span>
                        </div>
                        <div>+{$ats_vo.attribute_price}元</div>
                    </li>-->

                    <li class="attr-select-item attr-lg" onclick="changePrice()">
                        <input type="radio" name = "radio{$ats_vo.food_attribute_id}"  value="{$ats_vo.attribute_price}" data-fd_at_id="{$ats_vo.food_attribute_id}" data-key = "{$k}">
                        <div class="attr-name">
                            <span>{$ats_vo.attribute_name}</span>
                        </div>
                        <div>+{$ats_vo.attribute_price}元</div>
                    </li>
                </volist>
            </ul>
            <else/>
            <ul class="attr-list clearfix" id="third">
                <li class="attr-item-name">{$at_vo.type_name}</li>
                <volist name = "at_vo['attrs']" id = "ats_vo">
                    <!--<li class="attr-select-item {$ats_vo.length_type}" onclick="changePrice()">
                        <input type="radio" name = "radio{$ats_vo.food_attribute_id}"  value="{$ats_vo.attribute_price}" data-fd_at_id="{$ats_vo.food_attribute_id}" data-key = "{$k}"/>
                        <div class="attr-name">
                            <span>{$ats_vo.attribute_name}</span>
                        </div>
                        <div>+{$ats_vo.attribute_price}元</div>
                    </li>-->

                    <li class="attr-select-item attr-sm" onclick="changePrice()">
                        <input type="checkbox" name = "checkbox{$ats_vo.food_attribute_id}"  value="{$ats_vo.attribute_price}" data-fd_at_id="{$ats_vo.food_attribute_id}">
                        <div class="attr-name">
                            <span>{$ats_vo.attribute_name}</span>
                        </div>
                        <div>+{$ats_vo.attribute_price}元</div>
                    </li>
                </volist>
            </ul>
        </if>
    </volist>
    </form>
</div>
<div class="modal-bottom flex-content">
    <button class="flex-main" type="button" data-dismiss="modal"><span>&lt;&nbsp;</span>关闭</button>
    <button class="flex-main" type="button" id="food-checked" data-single_price="{$food_price}" data-attrs="" data-food_name="{$info3.food_name}" data-food_id="{$info3.food_id}" onclick="addOrderItem(this)">确认</button>
</div>
